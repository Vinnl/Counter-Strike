{
    "scripts": {
        "stan": "php vendor/bin/phpstan --memory-limit=200M analyze",
        "unit": "php vendor/bin/phpunit -d memory_limit=50M",
        "dev": "php cli/server.php 1 8080 1 & php cli/udp-ws-bridge.php",
        "dev2": "php cli/server.php 2 8080 1 & php cli/udp-ws-bridge.php & php cli/udp-ws-bridge.php 8082",
        "dev2c": "php cli/server.php 2 8080 1 & php cli/udp-ws-bridge.php & sleep 4 && php cli/client.php dcode 8080",
        "test": [
            "@putenv TEST_ENVIRONMENT=true",
            "@unit"
        ],
        "check": [
            "@composer dumpautoload --optimize",
            "@stan",
            "@test"
        ]
    },
    "require": {
        "php": "8.1.*",
        "ext-sockets": "*",

        "clue/socket-raw": "1.6.0",
        "psr/log": "3.0.0",
        "textalk/websocket": "1.5.8"
    },
    "autoload": {
        "psr-4": {
            "cs\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Simulation\\": "test/simulation/",
            "Test\\": "test/og/"
        }
    }
}
